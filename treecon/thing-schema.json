{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "Schema for Tree Nodes",
    "type": "object",
    "properties": {
	"name": {
	    "type": "string",
	    "required": true
	},
	"dateCreated": {
	    "type": "string",
	    "format": "date-time",
	    "required": true
	},
	"id": {
	    "type": "integer",
	    "minimum": 0,
	    "required": true
	},
	"type": {
	    "type": "string",
	    "required": true
	},
	"children": {
	    "description": "list of ids of child nodes of this node",
	    "type": "array",
	    "items": "integer"
	},
	"description": {
	    "type": "string"
	}
    },
    "additionalProperties": true
}
